<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/sal_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:background="#FF9100"
        android:gravity="center"
        android:text="Mr."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.034"

        />

    <TextView
        android:id="@+id/cust_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/sal_view"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Lee Chong Wei"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.083"

        />

    <TextView
        android:id="@+id/comp_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cust_name_view"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/sal_view"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Kong Sdn Bhd"
        android:textSize="18sp" />




</RelativeLayout>